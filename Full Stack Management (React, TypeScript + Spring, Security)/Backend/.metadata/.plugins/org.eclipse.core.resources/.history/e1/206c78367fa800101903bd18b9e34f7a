    @PostMapping("/add")
    public Customer addCustomer(@RequestParam("custName") String custName,
                                @RequestParam("custEmail") String custEmail,
                                @RequestParam("custMob") String custMob,
                                @RequestParam("photo") String photo) {

        Customer c = new Customer();
        c.setCustName(custName);
        c.setCustEmail(custEmail);
        c.setCustMob(custMob);

        // Decode Base64 string to bytes
        byte[] photoBytes = Base64.getDecoder().decode(photo.split(",")[1]); // split data:image/png;base64,....
        c.setPhotoxxx(photoBytes);

        return service.addCustomer(c);
    }



